<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zw.volleytest.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_below="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:hint="请输入"
            android:id="@+id/ed"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_StringGet"
        android:textAllCaps="false"
        android:text="StringGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <Button
        android:text="JsonObjectGet"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_StringGet"
        android:id="@+id/bt_JsonObjectGet" />

    <Button
        android:text="JsonArrayGet"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_JsonArraryGet"
        android:layout_below="@+id/bt_JsonObjectGet"
        android:layout_alignParentStart="true" />

    <Button
        android:text="StringPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/bt_StringGet"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_StringPost" />

    <Button
        android:textAllCaps="false"
        android:text="JsonPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_StringPost"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_JsonPost" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/bt_JsonArraryGet"
        android:layout_marginTop="37dp"
        android:id="@+id/imageView"
        android:layout_alignEnd="@+id/bt_StringGet"
        android:layout_alignParentStart="true" />

    <Button
        android:text="ImageRequest"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_ImageRequest"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
